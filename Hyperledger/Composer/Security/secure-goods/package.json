{
  "engines": {
    "composer": "^0.20.4"
  },
  "name": "secure-goods",
  "version": "0.0.1",
  "description": "Basic Secure Goods Network Demo",
  "scripts": {
    "clean": "rm -Rf node_modules dist out",
    "licchk": "license-check-and-add",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "prepublish": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/secure-goods.bna",
    "pretest": "npm run lint",
    "reinstall": "npm run clean && npm install",
    "test": "nyc mocha -t 0 test/*.js && cucumber-js"
  },
  "keywords": [
    "composer",
    "composer-network"
  ],
  "author": "jstevenperry",
  "email": "jstevenperry@makotogo.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "composer-admin": "^0.20",
    "composer-cli": "^0.20",
    "composer-client": "^0.20",
    "composer-common": "^0.20",
    "composer-connector-embedded": "^0.20",
    "cryptiles": ">=4.1.2",
    "eslint": "^3.6.1",
    "growl": ">=1.10.2",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "license-check-and-add": "~2.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "moment": "^2.17.1",
    "nyc": "^13.1.0",
    "sinon": "2.3.8"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "composer-logs",
      "dist",
      "node_modules",
      "out",
      ".git",
      "markdown-license.txt",
      ".DS_Store",
      "features",
      "LICENSE",
      "README.md"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".card"
    ],
    "insert_license": false,
    "license_formats": {
      "js|cto|acl": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      }
    }
  }
}
